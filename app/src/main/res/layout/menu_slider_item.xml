<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/premium_button_primary">

    <!-- Header Row with Name and Value -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <!-- Feature Name -->
        <TextView
            android:id="@+id/feature_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Feature Name"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            tools:ignore="HardcodedText" />

        <!-- Current Value -->
        <TextView
            android:id="@+id/current_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.00"
            android:textColor="#FF3333"
            android:textSize="13sp"
            android:textStyle="bold"
            android:minWidth="40dp"
            android:gravity="end"
            tools:ignore="HardcodedText" />

        <!-- Status Indicator -->
        <View
            android:id="@+id/status_dot"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="#FF3333"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Slider -->
    <SeekBar
        android:id="@+id/feature_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"
        android:progressTint="#FF3333"
        android:progressBackgroundTint="#444444"
        android:thumb="@drawable/seekbar_thumb"
        android:progressDrawable="@drawable/seekbar_track" />

</LinearLayout> 