<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/ios_item_card_background"
    android:elevation="4dp"
    android:padding="20dp"
    android:layout_marginBottom="12dp"
    android:clipToOutline="true">

    <!-- Feature Name -->
    <TextView
        android:id="@+id/feature_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Feature Name"
        android:textColor="#1D1D1F"
        android:textSize="18sp"
        android:textStyle="normal"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/current_value"
        tools:ignore="HardcodedText" />

    <!-- Current Value -->
    <TextView
        android:id="@+id/current_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7.00"
        android:textColor="#007AFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:minWidth="56dp"
        android:gravity="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText" />

    <!-- Slider (Material3) -->
    <com.google.android.material.slider.Slider
        android:id="@+id/feature_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:valueFrom="0"
        android:valueTo="100"
        android:value="50"
        android:stepSize="1"
        app:thumbColor="@color/ios_accent"
        app:trackColorActive="@color/ios_accent"
        app:trackColorInactive="@color/slider_track_inactive"
        app:labelBehavior="gone"
        app:trackHeight="6dp"
        app:thumbRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/feature_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout> 