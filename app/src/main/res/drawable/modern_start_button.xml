<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Shadow -->
            <item android:top="4dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#60000000" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <!-- Button Background -->
            <item android:top="2dp" android:left="0dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="135"
                        android:startColor="#1E7E34"
                        android:endColor="#155724" />
                    <corners android:radius="20dp" />
                    <stroke 
                        android:width="2dp" 
                        android:color="@color/premium_accent_green" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Normal State -->
    <item>
        <layer-list>
            <!-- Shadow -->
            <item android:top="4dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#40000000" />
                    <corners android:radius="20dp" />
                </shape>
            </item>
            <!-- Button Background -->
            <item android:top="0dp" android:left="0dp" android:right="4dp" android:bottom="4dp">
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="135"
                        android:startColor="@color/premium_accent_green"
                        android:endColor="#1E7E34" />
                    <corners android:radius="20dp" />
                    <stroke 
                        android:width="2dp" 
                        android:color="#40D158" />
                </shape>
            </item>
        </layer-list>
    </item>
    
</selector>
