<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button Shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#60000000" />
        </shape>
    </item>
    
    <!-- Main Button Background -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/background_surface_light" />
            <stroke android:width="2dp" android:color="@color/text_primary" />
        </shape>
    </item>
    
    <!-- Button Highlight -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:startColor="#20FFFFFF"
                android:endColor="#10FFFFFF"
                android:angle="135" />
        </shape>
    </item>
</layer-list> 