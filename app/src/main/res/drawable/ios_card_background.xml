<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Enhanced Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#40000000" />
        </shape>
    </item>
    
    <!-- Secondary Shadow for Depth -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#20000000" />
        </shape>
    </item>
    
    <!-- Main Dark Card -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="@color/background_primary" />
            <stroke 
                android:width="1dp" 
                android:color="@color/border" />
        </shape>
    </item>
    
    <!-- Subtle Dark Accent for Modern Look -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:startColor="#15000000"
                android:endColor="#05000000"
                android:angle="135" />
        </shape>
    </item>
</layer-list> 