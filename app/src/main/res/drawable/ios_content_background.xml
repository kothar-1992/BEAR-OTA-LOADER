<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Content Area Shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners 
                android:topRightRadius="20dp"
                android:bottomRightRadius="20dp" />
            <solid android:color="#20000000" />
        </shape>
    </item>
    
    <!-- Main Content Background -->
    <item android:left="2dp" android:right="0dp" android:top="0dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners 
                android:topRightRadius="20dp"
                android:bottomRightRadius="20dp" />
            <solid android:color="@color/background_surface" />
        </shape>
    </item>
    
    <!-- Subtle Dark Gradient for Depth -->
    <item android:left="2dp" android:right="0dp" android:top="0dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners 
                android:topRightRadius="20dp"
                android:bottomRightRadius="20dp" />
            <gradient
                android:startColor="#08000000"
                android:endColor="#03000000"
                android:angle="270" />
        </shape>
    </item>
</layer-list> 