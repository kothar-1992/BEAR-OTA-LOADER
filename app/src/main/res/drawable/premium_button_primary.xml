<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Shadow -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <solid android:color="@color/shadow" />
                </shape>
            </item>
            <!-- Button -->
            <item
                android:left="0dp"
                android:top="0dp"
                android:right="1dp"
                android:bottom="2dp">
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <gradient
                        android:startColor="@color/button_primary_pressed"
                        android:endColor="@color/primary_dark"
                        android:angle="135" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Normal State -->
    <item>
        <layer-list>
            <!-- Shadow -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <solid android:color="@color/shadow" />
                </shape>
            </item>
            <!-- Button -->
            <item
                android:left="0dp"
                android:top="0dp"
                android:right="2dp"
                android:bottom="3dp">
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <gradient
                        android:startColor="@color/button_primary"
                        android:endColor="@color/primary_dark"
                        android:angle="135" />
                </shape>
            </item>
            <!-- Shine effect -->
            <item
                android:left="0dp"
                android:top="0dp"
                android:right="2dp"
                android:bottom="3dp">
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <gradient
                        android:startColor="#20FFFFFF"
                        android:endColor="#00FFFFFF"
                        android:angle="90" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector> 