<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <layer-list>
            <!-- Shadow -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/shadow" />
                </shape>
            </item>
            <!-- Button -->
            <item
                android:left="0dp"
                android:top="0dp"
                android:right="1dp"
                android:bottom="2dp">
                <shape android:shape="oval">
                    <solid android:color="@color/stepper_active" />
                    <stroke
                        android:width="2dp"
                        android:color="@color/primary_light" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Normal State -->
    <item>
        <layer-list>
            <!-- Shadow -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/shadow" />
                </shape>
            </item>
            <!-- Button -->
            <item
                android:left="0dp"
                android:top="0dp"
                android:right="2dp"
                android:bottom="3dp">
                <shape android:shape="oval">
                    <gradient
                        android:startColor="@color/stepper_background"
                        android:endColor="@color/nav_inactive"
                        android:angle="135" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/border" />
                </shape>
            </item>
            <!-- Subtle shine -->
            <item
                android:left="0dp"
                android:top="0dp"
                android:right="2dp"
                android:bottom="3dp">
                <shape android:shape="oval">
                    <gradient
                        android:startColor="#15FFFFFF"
                        android:endColor="#00FFFFFF"
                        android:angle="90" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector> 