<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/shadow" />
        </shape>
    </item>
    
    <!-- Main Card -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="2dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/background_surface" />
            <stroke 
                android:width="1dp" 
                android:color="@color/card_border" />
        </shape>
    </item>
    
    <!-- Subtle Gradient Overlay -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="2dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <gradient
                android:startColor="#10FFFFFF"
                android:endColor="#05FFFFFF"
                android:angle="135" />
        </shape>
    </item>
</layer-list> 