<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient"
    tools:context=".ui.auth.LoginActivity">

    <!-- Animated background elements for modern feel -->
    <View
        android:id="@+id/bg_accent_1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="-100dp"
        android:alpha="0.1"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/bg_accent_2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="-75dp"
        android:layout_marginBottom="-75dp"
        android:alpha="0.08"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/accent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Modern logo with enhanced styling -->
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="60dp"
        android:contentDescription="@string/app_logo"
        android:elevation="8dp"
        android:src="@drawable/logo_splash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Modern app name with gradient text effect -->
    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/app_name"
        android:textColor="@color/primary"
        android:textSize="28sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo" />

    <!-- Modern subtitle with better typography -->
    <TextView
        android:id="@+id/tv_login_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/login_subtitle"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:alpha="0.9"
        android:letterSpacing="0.02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_app_name" />

    <!-- Modern elevated login card with enhanced shadows -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:strokeColor="@color/surface_container_high"
        app:strokeWidth="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_login_subtitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Modern section header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/license_key"
                android:textColor="@color/primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:letterSpacing="0.02" />

            <!-- Enhanced text input with modern styling -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_license_key"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="@string/enter_license_key"
                app:boxBackgroundColor="@color/surface_container"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusTopStart="16dp"
                app:boxStrokeColor="@color/primary"
                app:boxStrokeWidth="2dp"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/ic_error"
                app:errorTextColor="@color/error"
                app:hintTextColor="@color/text_hint"
                app:startIconDrawable="@drawable/ic_key"
                app:startIconTint="@color/primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_license_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="textVisiblePassword"
                    android:maxLines="1"
                    android:padding="16dp"
                    android:textAllCaps="true"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    tools:ignore="TextContrastCheck,VisualLintTextFieldSize" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Modern switch with enhanced styling -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_remember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:checked="true"
                android:text="@string/remember_me"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                app:thumbTint="@color/primary"
                app:trackTint="@color/surface_container_high"
                tools:ignore="VisualLintButtonSize" />

            <!-- Modern button with enhanced styling -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_login"
                style="@style/Widget.BearLoader.Button.Modern"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:enabled="false"
                android:text="@string/login"
                android:textSize="16sp"
                android:textStyle="bold"
                android:letterSpacing="0.02"
                app:cornerRadius="16dp"
                app:elevation="8dp"
                app:rippleColor="@color/ripple"
                tools:ignore="VisualLintButtonSize" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Modern version text with better positioning -->
    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/version_info"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:alpha="0.8"
        android:letterSpacing="0.05"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Modern loading progress with enhanced styling -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:indicatorColor="@color/primary"
        app:indicatorSize="56dp"
        app:trackColor="@color/surface_container_high"
        app:trackThickness="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Small initialization progress -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_initializing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:visibility="gone"
        app:indicatorColor="@color/accent"
        app:indicatorSize="32dp"
        app:trackColor="@color/surface_container"
        app:trackThickness="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Enhanced success animation -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/success_animation"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:visibility="gone"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/success_animation" />

    <!-- Modern overlay with enhanced blur effect -->
    <View
        android:id="@+id/view_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#CC000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
