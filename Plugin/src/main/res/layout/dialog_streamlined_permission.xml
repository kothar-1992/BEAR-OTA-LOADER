<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardBackgroundColor="@color/md3_surface"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_security_24"
                app:tint="@color/md3_primary"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_permission_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Permissions Required"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/md3_on_surface" />

        </LinearLayout>

        <!-- Message -->
        <TextView
            android:id="@+id/tv_permission_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BearMod needs these permissions to function:"
            android:textSize="14sp"
            android:textColor="@color/md3_on_surface_variant"
            android:layout_marginBottom="16dp" />

        <!-- Brief Permissions List -->
        <LinearLayout
            android:id="@+id/ll_permissions_brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btn_cancel_permissions"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Cancel"
                android:textColor="@color/md3_on_surface_variant"
                android:layout_marginEnd="8dp"
                android:minWidth="80dp" />

            <Button
                android:id="@+id/btn_grant_permissions"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Grant"
                android:backgroundTint="@color/md3_primary"
                android:textColor="@color/md3_on_primary"
                android:minWidth="80dp"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
