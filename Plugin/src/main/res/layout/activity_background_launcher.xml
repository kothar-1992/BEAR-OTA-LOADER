<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.launcher.BackgroundLauncherActivity">

    <!-- Modern AppBar with gradient background -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.BearLoader.NoActionBar"
        android:background="@drawable/splash_gradient">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:popupTheme="@style/Theme.BearLoader.NoActionBar"
            app:title="Target App Management"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:spacing="16dp">

            <!-- Game Status Card - Modern Premium Design -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="24dp"
                app:cardElevation="16dp"
                app:strokeWidth="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/elevated_card_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <!-- Header with gradient background -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/frosted_glass_background"
                            android:padding="16dp"
                            android:layout_marginBottom="20dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/ic_play_arrow"
                                app:tint="@color/accent_secondary" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Game Status"
                                android:textColor="@color/text_primary"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.02" />

                        </LinearLayout>

                        <!-- Compatibility Status with modern design -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/premium_card_gradient"
                            android:padding="16dp"
                            android:layout_marginBottom="16dp">

                            <ImageView
                                android:id="@+id/iv_compatibility_status"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/ic_help_outline"
                                app:tint="@color/accent_secondary" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_compatibility_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Checking compatibility..."
                                    android:textColor="@color/text_primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_version_info"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Detecting game version..."
                                    android:textColor="@color/text_secondary"
                                    android:textSize="14sp"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Signature Status with modern design -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/premium_card_gradient"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/iv_signature_status"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/ic_security"
                                app:tint="@color/accent_secondary" />

                            <TextView
                                android:id="@+id/tv_signature_status"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Verifying game integrity..."
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Game Enhancement Status Card - Premium Design -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:strokeWidth="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/elevated_card_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <!-- Header with gradient background -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/frosted_glass_background"
                            android:padding="16dp"
                            android:layout_marginBottom="20dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/ic_download"
                                app:tint="@color/primary" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Enhancement Status"
                                android:textColor="@color/text_primary"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.02" />

                        </LinearLayout>

                        <!-- Modern Progress Indicator -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/premium_card_gradient"
                            android:padding="20dp"
                            android:layout_marginBottom="16dp">

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/progress_download"
                                android:layout_width="match_parent"
                                android:layout_height="8dp"
                                android:layout_marginBottom="12dp"
                                android:visibility="gone"
                                app:indicatorColor="@color/accent_secondary"
                                app:trackColor="@color/surface_container_high"
                                app:trackCornerRadius="4dp" />

                            <TextView
                                android:id="@+id/tv_download_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ready for enhancement"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Download Button with modern styling -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_download_mod"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="Download Game Enhancement"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:backgroundTint="@color/accent_secondary"
                            app:cornerRadius="16dp"
                            app:icon="@drawable/ic_download"
                            app:iconTint="@color/white"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            style="@style/Widget.MaterialComponents.Button" />

                    </LinearLayout>

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Permissions Card - Tall Premium Design -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="24dp"
                app:cardElevation="16dp"
                app:strokeWidth="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/elevated_card_background"
                    android:minHeight="160dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <!-- Header with gradient background -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/frosted_glass_background"
                            android:padding="16dp"
                            android:layout_marginBottom="20dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/ic_security"
                                app:tint="@color/warning" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Security Permissions"
                                android:textColor="@color/text_primary"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.02" />

                        </LinearLayout>

                        <!-- Permission Items Container with modern design -->
                        <LinearLayout
                            android:id="@+id/layout_permissions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/premium_card_gradient"
                            android:padding="16dp"
                            android:layout_marginBottom="20dp" />

                        <!-- Request All Permissions Button with modern styling -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_request_permissions"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="Grant Security Permissions"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:backgroundTint="@color/accent_secondary"
                            app:cornerRadius="16dp"
                            app:icon="@drawable/ic_security"
                            app:iconTint="@color/white"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp"
                            style="@style/Widget.MaterialComponents.Button" />

                    </LinearLayout>

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons Card - Premium Design -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="24dp"
                app:cardElevation="20dp"
                app:strokeWidth="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/elevated_card_background">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <!-- Header with gradient background -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/frosted_glass_background"
                            android:padding="16dp"
                            android:layout_marginBottom="24dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/ic_play_arrow"
                                app:tint="@color/primary" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Game Enhancement Actions"
                                android:textColor="@color/text_primary"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.02" />

                        </LinearLayout>

                        <!-- Primary Action Button with premium styling -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_start_ota_patch"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:layout_marginBottom="16dp"
                            android:text="Start Game Enhancement"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:enabled="false"
                            app:backgroundTint="@color/primary"
                            app:cornerRadius="20dp"
                            app:icon="@drawable/ic_play_arrow"
                            app:iconTint="@color/white"
                            app:iconGravity="textStart"
                            app:iconPadding="12dp"
                            app:iconSize="24dp"
                            style="@style/Widget.MaterialComponents.Button" />

                        <!-- Secondary Action Button with modern outlined style -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_injection_only"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginBottom="16dp"
                            android:text="Game Integration Only"
                            android:textColor="@color/accent_secondary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:enabled="false"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:cornerRadius="18dp"
                            app:strokeColor="@color/accent_secondary"
                            app:strokeWidth="2dp"
                            app:icon="@drawable/ic_flash_on"
                            app:iconTint="@color/accent_secondary"
                            app:iconGravity="textStart"
                            app:iconPadding="12dp"
                            app:iconSize="22dp" />

                        <!-- Emergency Stop Button with distinct styling -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_stop"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:text="Stop All Processes"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:backgroundTint="@color/error"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_stop"
                            app:iconTint="@color/white"
                            app:iconGravity="textStart"
                            app:iconPadding="12dp"
                            app:iconSize="20dp"
                            style="@style/Widget.MaterialComponents.Button" />

                    </LinearLayout>

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button for Settings -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_settings"
        app:backgroundTint="@color/accent"
        app:tint="@color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
